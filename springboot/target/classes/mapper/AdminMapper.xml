<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.AdminDao">
<select id="selectAll" resultType="com.example.springboot.entity.Admin">
    select * from admin
<where>
    <if test="username != null"> and username like concat('%', #{username}, '%')</if>
</where>
</select>
    <insert id="insertAdmin">
        insert into admin (name,username,password,email,avatar,phone,role)
        values(#{name},#{username},#{password},#{email},#{avatar},#{phone},#{role})
    </insert>
    <delete id="deleteById">
        delete from admin
        where  id = #{id}
    </delete>


    <update id="updateById" parameterType="com.example.springboot.entity.Admin">
        update admin
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>

            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="role != null">
                role = #{role},
            </if>

        </set>
        where id = #{id}
    </update>

    <select id="selectAdminByUsername" resultType="com.example.springboot.entity.Admin">
        select admin.*
        from admin
        where username = #{username}
    </select>
    <select id="selectById" resultType="com.example.springboot.entity.Admin">
        select admin.*
        from admin
        where id = #{id}
    </select>

</mapper>